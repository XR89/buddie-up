<nav>
  <% if user_signed_in? %>
    <%= link_to root_path, class: "navbar-brand" do %>
      <h1>BUDDIE UP</h1>
    <% end %>
  <% end %>



  <div class='d-flex'>

    <div class="d-flex justify-content-center">
      <% if user_signed_in? %>
      <%= simple_form_for :query, url: games_path, method: :get, class:'#' do |f| %>
      <div class='d-flex'>
      <%= f.input :title, collection: Game.all, label: false, input_html: { class: 'select2 test' }  %>
      <%= f.submit "Go to Game", class: "pop-btn pop-btn-pink button_correct nav-items" %>
      </div>
      <% end %>
    </div>


    <ul class="nav-items">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "pop-btn pop-btn-pink" %>
        </li>
        <li class="nav-item">
          <%= link_to "Games", games_path, class: "pop-btn pop-btn-pink" %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path, class: "pop-btn pop-btn-pink" %>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", profile_path, class: "pop-btn pop-btn-pink" %>
        </li>
        <li class="nav-dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", id: "navbarDropdown", data: { toggle: "dropdown" } %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
    </ul>
    <% end %>
  </div>
</nav>
