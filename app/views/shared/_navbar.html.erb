            <%# this might need to change soon %>
            <%= link_to "Active session", game_session_path, class: "dropdown-item"%>
            <% else %>
            <%= link_to "No Active session", "#", class: "dropdown-item"%>
            <% end %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
